@model Application.Models.Account.AccountViewModel

<!doctype html>
<html lang="en">
<head>
    <title>
        Saigon Technology: Top Software Development Company in Vietnam
    </title>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="~/css/style.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap-Login.css" rel="stylesheet" />

    <link href="~/lib/bootstrap/dist/css/login-register.css" rel="stylesheet" />
    <link rel="stylesheet" href="http://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css">

    <link href="~/css/site.css" rel="stylesheet" />

    <script src="~/lib/bootstrap/dist/js/jquery-1.10.2.js" type="text/javascript"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap-Login.js" type="text/javascript"></script>
    <script src="~/lib/bootstrap/dist/js/login-register.js" type="text/javascript"></script>

</head>
<body>
    <img src="~/assets/images/background/background.jpg" id="background-body" />
    <div class="container"> `
        <div class="row">
            <div class="col-sm-5"></div>
            <div class="col-sm-3" style="top: 200px;">
                <a class="btn big-login" data-toggle="modal" onclick="openLoginModal(); backgroundColorSwap2();" id="btn-login">Log in</a>
                <br /><br /><br />
                <a class="btn big-register" id="btn-signup" data-toggle="modal" onclick="openRegisterModal(); backgroundColorSwap1();" style="margin-left: -13px;">Register</a>
                <div id="toastRegister">Account registration is successful!</div>

            </div>
            <div class="col-sm-4"></div>
        </div>

        <div class="modal fade login" id="loginModal">
            <div class="modal-dialog login animated">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true" hidden>&times;</button>
                        <h4 class="modal-title text-center" style="margin:50px; font-size:40px">Login</h4>
                    </div>

                    <div class="modal-body">
                        <div class="box">
                            <div class="content">
                                <div class="error"></div>

                                <div class="form loginBox">
                                    <form id="login-form" class="form-horizontal form-material mx-2"
                                          data-ajax-success="Bindgrid"
                                          data-ajax="true"
                                          data-ajax-method="POST">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="form-group">
                                            <div class="col-md-12">
                                                <input class="form-control" type="text" placeholder="Email" name="email" />
                                                <span id="Err_EmailLogin" class="text-danger"></span>

                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-md-12">
                                                <input class="form-control" type="password" placeholder="Password" name="password" />
                                                <span id="Err_PasswordLogin" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <input type="submit" value="Login" class="btn btn-default btn-login" />
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="box">
                            <div class="content registerBox" style="display:none;">
                                <div class="form">
                                    <form id="register-form" class="form-horizontal form-material mx-2">
                                        <div class="form-group">
                                            <div class="col-md-12">
                                                <input class="form-control" type="text" placeholder="Email" name="email" />
                                                <span id="Err_EmailRegister" class="text-danger"></span>
                                            </div>

                                        </div>
                                        <div class="form-group">
                                            <div class="col-md-12">
                                                <input class="form-control" type="password" placeholder="Password" name="Password" />
                                                <span id="Err_PasswordRegister" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-md-12">
                                                <input class="form-control" type="password" placeholder="Confirm Password" name="confirmpassword" />
                                                <span id="Err_ConfirmPasswordRegister" class="text-danger"></span>

                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <input type="button" value="Create account" class="btn btn-default btn-register" onclick="Register()" />
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <div class="forgot login-footer">
                            <span>
                                Looking to
                                <a href="javascript: showRegisterForm(); backgroundColorSwap1();">create an account</a>
                                ?
                            </span>
                        </div>
                        <div class="forgot register-footer" style="display:none">
                            <span>Already have an account?</span>
                            <a href="javascript: showLoginForm(); backgroundColorSwap2();">Login</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/js/site.js"></script>

</body>
</html>

<script>

</script>
